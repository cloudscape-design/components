{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "custom-property-pattern": "^(?!.+)",
    "scss/comment-no-empty": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "selector-combinator-disallowed-list": [
      " "
    ],
    "selector-class-pattern": "^(?!awsui).*?",
    "selector-max-type": [0, { "ignore": ["compounded"] }],
    "selector-max-universal": [0],
    "order/order": [
      "declarations",
      "rules"
    ],
    "@cloudscape-design/license-headers": [
      true,
      {
        "header": "\n Copyright Amazon.com, Inc. or its affiliates. All Rights Reserved.\n SPDX-License-Identifier: Apache-2.0\n"
      }
    ],
    "@cloudscape-design/no-implicit-descendant": [
      true,
      {
        "ignoreParents": [
          ":global",
          "svg",
          "@keyframes"
        ]
      }
    ],
    "@cloudscape-design/no-motion-outside-of-mixin": [true],
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "ignorePartialSupport": true,
        "ignore": ["css-nesting", "css-when-else", "flexbox-gap"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["./src/button/*.scss"],
      "rules": {
        "property-disallowed-list": [
          "border", 
          "border-bottom",
          "border-bottom-color",
          "border-bottom-left-radius",
          "border-bottom-right-radius",
          "border-bottom-width",
          "border-bottom-style",
          "border-left",
          "border-left-color",
          "border-left-width",
          "border-left-style",
          "border-radius",
          "border-right", 
          "border-right-color",
          "border-right-width",
          "border-right-style",
          "border-top",
          "border-top-color",
          "border-top-left-radius",
          "border-top-right-radius",
          "border-top-width",
          "border-top-style",
          "border-style",
          "bottom",
          "height",
          "left",
          "margin",
          "margin-bottom",
          "margin-left",
          "margin-right",
          "margin-top", 
          "max-height",
          "max-width",
          "min-height",
          "min-width",
          "padding",
          "padding-bottom",
          "padding-left",
          "padding-right",
          "padding-top",
          "right",
          "top",
          "width"
        ],
        "csstools/use-logical": "always"
      }
    }
  ],
  "plugins": [
    "stylelint-use-logical",
    "stylelint-order",
    "stylelint-no-unsupported-browser-features",
    "./build-tools/stylelint"
  ]
}
