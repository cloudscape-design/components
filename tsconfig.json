{
  "compilerOptions": {
   "lib": ["ES2021", "DOM"],
    "target": "ES2019",
    "types": [],
    "module": "ES2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "declaration": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "lib/components",
    "incremental": true
  },
  "include": ["src", "types"],
  "exclude": ["**/__tests__/**", "src/test-utils/**", "**/__integ__/**", "**/__a11y__/**", "**/__motion__/**"]
}
